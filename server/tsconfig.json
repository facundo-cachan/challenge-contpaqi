{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@repos/*": ["src/repos/*"],
      "@models/*": ["src/models/*"],
      "@shared/*": ["src/shared/*"],
      "@server": ["src/server"],
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"],
      "@util/*": ["src/util/*"]
    },
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"],
  "exclude": ["src/public/"]
}
