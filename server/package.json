{
  "name": "expressjs-typescript",
  "version": "0.0.0",
  "license": "ISC",
  "private": true,
  "author": "Facundo Cachan <yo@facundo-cachan.com>",
  "contributors": [],
  "description": "",
  "homepage": "http://expressjs-typescript-facundo-cachan.vercel.app/",
  "repository": "https://github.com/seanpmaxwell/express-generator-typescript",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@services": "dist/services",
    "@repos": "dist/repos",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/server",
    "@routes": "dist/routes",
    "@util": "dist/util"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "eslintIgnore": [
    "src/public/",
    "build.ts"
  ],
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,ts,tsx}": [
      "npx prettier --write ."
    ],
    "*": [
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn check-all"
    }
  },
  "scripts": {
    "build": "./node_modules/.bin/ts-node build.ts",
    "start": "node -r module-alias/register ./dist --env=production",
    "start:dev": "NODE_ENV=development nodemon --env=development",
    "prepare": "husky install .config/husky",
    "check-format": "prettier --check .",
    "check-types": "tsc --pretty --noEmit",
    "check-all": "yarn prettier && yarn lint && yarn check-format && yarn check-types",
    "lint": "lint-staged",
    "eslint": "eslint --quiet --fix",
    "prettier": "prettier --write .",
    "test": "nodemon --config ./spec/nodemon.json",
    "test:no-reloading": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./spec"
  },
  "dependencies": {
    "axios": "^1.7.3",
    "bcrypt": "^5.1.1",
    "command-line-args": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "husky": "^9.1.4",
    "jet-logger": "^1.3.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "randomstring": "^1.3.0",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/command-line-args": "^5.2.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/find": "^0.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jasmine": "^5.1.4",
    "@types/jsonfile": "^6.1.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.1.0",
    "@types/randomstring": "^1.3.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.8.0",
    "find": "^0.3.0",
    "fs-extra": "^11.2.0",
    "jasmine": "^5.2.0",
    "lint-staged": "^15.2.8",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "socket.io-client": "^4.7.5",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  }
}
